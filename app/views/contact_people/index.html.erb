<p id="notice"><%= notice %></p>

<h1>Contact People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Supplier</th>
      <th>Client</th>
      <th>Additional</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contact_people.each do |contact_person| %>
      <tr>
        <td><%= contact_person.name %></td>
        <td><%= contact_person.email %></td>
        <td><%= contact_person.phone %></td>
        <td><%= contact_person.supplier_id %></td>
        <td><%= contact_person.client_id %></td>
        <td><%= contact_person.additional %></td>
        <td><%= contact_person.tags %></td>
        <td><%= link_to 'Show', contact_person %></td>
        <td><%= link_to 'Edit', edit_contact_person_path(contact_person) %></td>
        <td><%= link_to 'Destroy', contact_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

