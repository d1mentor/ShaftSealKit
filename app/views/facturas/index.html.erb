<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Facturownia</th>
      <th>Additional</th>
      <th>Tags</th>
      <th>Status</th>
      <th>Bid</th>
      <th>Offer</th>
      <th>Files</th>
      <th>Sum</th>
      <th>Sum currency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.facturownia_id %></td>
        <td><%= factura.additional %></td>
        <td><%= factura.tags %></td>
        <td><%= factura.status %></td>
        <td><%= factura.bid_id %></td>
        <td><%= factura.offer_id %></td>
        <td><%= factura.files %></td>
        <td><%= factura.sum %></td>
        <td><%= factura.sum_currency %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

