<p id="notice"><%= notice %></p>

<h1>Kits</h1>

<table>
  <thead>
    <tr>
      <th>Offer</th>
      <th>Category</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Width</th>
      <th>Tags</th>
      <th>Additional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.offer_id %></td>
        <td><%= kit.category_id %></td>
        <td><%= kit.weight %></td>
        <td><%= kit.height %></td>
        <td><%= kit.width %></td>
        <td><%= kit.tags %></td>
        <td><%= kit.additional %></td>
        <td><%= link_to 'Show', kit %></td>
        <td><%= link_to 'Edit', edit_kit_path(kit) %></td>
        <td><%= link_to 'Destroy', kit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Kit', new_kit_path %>
