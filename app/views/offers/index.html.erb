<p id="notice"><%= notice %></p>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Incoming</th>
      <th>Type</th>
      <th>Status</th>
      <th>Supplier</th>
      <th>Client</th>
      <th>Bid</th>
      <th>Files</th>
      <th>Tags</th>
      <th>Additional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.incoming %></td>
        <td><%= offer.type %></td>
        <td><%= offer.status %></td>
        <td><%= offer.supplier_id %></td>
        <td><%= offer.client_id %></td>
        <td><%= offer.bid_id %></td>
        <td><%= offer.files %></td>
        <td><%= offer.tags %></td>
        <td><%= offer.additional %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

