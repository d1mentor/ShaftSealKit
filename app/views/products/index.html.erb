<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Kit</th>
      <th>Spare part</th>
      <th>Price</th>
      <th>Price currency</th>
      <th>Additional</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.kit_id %></td>
        <td><%= product.spare_part_id %></td>
        <td><%= product.price %></td>
        <td><%= product.price_currency %></td>
        <td><%= product.additional %></td>
        <td><%= product.tags %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

