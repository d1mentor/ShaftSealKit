<p id="notice"><%= notice %></p>

<h1>Spare Parts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th>Tags</th>
      <th>Images</th>
      <th>Files</th>
      <th>Manufacturer</th>
      <th>Kit</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spare_parts.each do |spare_part| %>
      <tr>
        <td><%= spare_part.name %></td>
        <td><%= spare_part.category_id %></td>
        <td><%= spare_part.description %></td>
        <td><%= spare_part.tags %></td>
        <td><%= spare_part.images %></td>
        <td><%= spare_part.files %></td>
        <td><%= spare_part.manufacturer %></td>
        <td><%= spare_part.kit_id %></td>
        <td><%= spare_part.weight %></td>
        <td><%= link_to 'Show', spare_part %></td>
        <td><%= link_to 'Edit', edit_spare_part_path(spare_part) %></td>
        <td><%= link_to 'Destroy', spare_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

