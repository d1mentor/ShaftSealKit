<p id="notice"><%= notice %></p>

<h1>Supplies</h1>

<table>
  <thead>
    <tr>
      <th>Additional</th>
      <th>Tags</th>
      <th>Status</th>
      <th>Offer</th>
      <th>Files</th>
      <th>Shipping type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.additional %></td>
        <td><%= supply.tags %></td>
        <td><%= supply.status %></td>
        <td><%= supply.offer_id %></td>
        <td><%= supply.files %></td>
        <td><%= supply.shipping_type %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

